{% block title %}{{ 'e-Music : Consulter mon profil' }}{% endblock %}
{% extends 'base.html.twig' %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('dist/css/bootstrap.min.css') }}">{% endblock %}
{%  block extraMenu %}
    {% include 'admin/menu.html.twig' %}
{% endblock %}
{% block body %}
    <div class="float-end mt-2">
        <a href="{{ path('coursAjouter') }}" class="btn rounded-pill btn-sm border-0" style="background-color: #aed6dc;">Ajouter un cours</a>
    </div>
    <div style="clear: both;"></div>
    <div class="table-responsive mt-2">
        <table class="table table-striped bg-white mt-2">
            <thead>
            <tr>
                <th scope="col">Nom du cours</th>
                <th scope="col">Professeur</th>
                <th scope="col">Age minimum</th>
                <th scope="col">Date</th>
            </tr>
            </thead>
            <tbody>
            {% for c in pCours %}
                <tr>
                    <td><a href="{{ path('consulterCours', { 'id': c.id }) }}" class="text-decoration-none">{{ c.libelle }}</a></td>
                    <td>{{c.professeur.compte.nom|upper}} {{c.professeur.compte.prenom}}</td>
                    <td>{{c.ageMini}} </td>
                    <td>{{c.date|date('d/m/Y')}} | {{c.heureDebut|date('H:i')}} - {{c.heureFin|date('H:i')}}</td>
                    <td class="align-middle">
                        <a href="{{ path('modifierCours', { 'id': c.id }) }}" class="btn btn-info rounded-pill float-end btn-sm">Modifier les informations</a>
                    </td>

                </tr>
            {% else %}
                <tr>
                    <td>Aucun cours n'a été trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block footer %}<script src="{{ asset('dist/js/bootstrap.bundle.min.js') }}" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>{% endblock %}